data "aws_ami" "devops" {
  most_recent = true
  owners      = ["amazon"]
  filter {
    name   = "architecture"
    values = ["x86_64"]
  }
  filter {
    name   = "name"
    values = ["al2023-ami-2023*"]
  }
  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

}

resource "aws_instance" "HelloWorld" {
  ami           = data.aws_ami.devops.id
  instance_type = "t3.micro"

  tags = {
    Name = "HelloWorld"
  }
}
